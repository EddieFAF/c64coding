;--------------------------------------------------
;
;-- Paragraph Irq 1: Koala-Logo Effekt Fade In  ---
;
;--------------------------------------------------

!zone
irq1    inc $d019
.show   lda #$7b
        sta $d011

.loop1  lda $d012
        cmp #$32
        bcc .loop1
        
        ldx #$00            ;logo fade
.loop2  lda .rasterfade,x
        ldy $d012
.rasw   cpy $d012
        beq .rasw
        sta $d011
        nop:nop:nop
        inx
        cpx #$f2
        bne .loop2
        
.cnt1   ldx #$00            ;update fade-table
.cnt2   ldy #$f1
        lda #$3b            ; f√ºr die Blende
        sta .rasterfade,x
        sta .rasterfade,y
        
        lda .cnt1+1
        clc:adc #2
        sta .cnt1+1
        
        lda .cnt2+1
        sec:sbc #2
        sta .cnt2+1
        
        lda .cnt1+1
        cmp #$f2
        bcc .weiter

.weiter jmp $ea7e


.rasterfade
!fill $f2,$7b

